{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "../../dist/out-tsc",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "../../libs/types/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
